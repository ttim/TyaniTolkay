<h1>Ad view</h1>
<div>User name: <%= @ad.user.name %></div>
<div>Description: <%= @ad.desc %></div>
<div>Price: <%= @ad.price %></div>
<div>Tags: <%= @ad.tags %></div>
<%= link_to "Edit", edit_ad_path(@ad) if user_signed_in? && current_user.can_edit_ad?(@ad) %>
<%= render :partial => 'partials/add_message_form', :locals => {:parent_message => nil, :ad => @ad, :is_visible => true} %>
<h3>Messages count: <%= @ad.messages.size %></h3>
<% @ad.root_messages.each do |message| %>
    <%= render :partial => 'partials/view_message', :locals => {:message => message} %>
<% end %>